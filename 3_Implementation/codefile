class test(player):
    def teamA(self,name,odiruns):
        list1=[]
        print(list1)
        if odiruns > 150:
            list1.append(name)

            print("your name is",list1)
            print("your team is A")
    def teamB(self,name,odiruns):
        list2=[]
        if odiruns<150:
            list2.append(name)
            print("your name is",list2)
            print("your team is B")

obj = test()
name= input("enter name")
try:
  odiruns=int(input("enter runs"))
except:
  print("type error")
obj.scorecard(name,odiruns)
obj.teamA(name,odiruns)
obj.teamB(name,odiruns)

