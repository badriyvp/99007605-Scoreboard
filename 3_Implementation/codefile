class player:
    def scorecard(self,name,odiruns):
        self.name=name
        self.odiruns=odiruns

        list=["Yuvi","Dhoni","virat","stokes","boult","starc","jonny","abd"]
        if name in list:
            print("name is found his name is",name)
        else:
            print("name not found")
    def cricket(self,name):
        if name == "Yuvi":
            print("century=20")
